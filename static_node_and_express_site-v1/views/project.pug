extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= dataJSON.project_name


        p.lead.text-light= dataJSON.description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in dataJSON.technologies
            li= technology

        a.button.expanded(href=dataJSON.live_link, target='_blank') Live Demo
        a.button.expanded(href=dataJSON.github_link, target='_blank') GitHub Repo
    
    img.image(src=dataJSON.image_urls[1])
    if (dataJSON.image_urls[2])
      img.image(src=dataJSON.image_urls[2])
    if (dataJSON.image_urls[3])
      img.image(src=dataJSON.image_urls[3])
